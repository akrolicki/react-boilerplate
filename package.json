{
  "name": "widelab-react-boilerplate",
  "private": true,
  "version": "0.0.0",
  "type": "module",
  "scripts": {
    "dev": "vite",
    "build": "tsc && vite build",
    "preview": "vite preview",
    "lint": "eslint . --ext .ts,.tsx",
    "lint:fix": "yarn lint --fix",
    "prettier": "npx prettier src --check",
    "prettier:fix": "yarn prettier --write",
    "format": "yarn prettier:fix && yarn lint:fix",
    "test": "jest",
    "test-watch": "jest --watch",
    "prepare": "husky install",
    "icons": "svgr --icon --replace-attr-values '#D9D9D9=currentColor' --index-template iconIndexTemplate.cjs -d src/icons src/icons/svg --typescript --jsx-runtime 'automatic'",
    "storybook": "storybook dev -p 6006",
    "build-storybook": "storybook build"
  },
  "lint-staged": {
    "src/**/*.{js,jsx,ts,tsx,json,css,scss,md}": [
      "yarn prettier:fix",
      "yarn lint:fix",
      "jest --bail --findRelatedTests --passWithNoTests"
    ]
  },
  "dependencies": {
    "@reduxjs/toolkit": "^1.9.5",
    "class-variance-authority": "^0.6.0",
    "clsx": "^1.2.1",
    "react": "^18.2.0",
    "react-dom": "^18.2.0",
    "react-redux": "^8.0.5",
    "react-router-dom": "^6.11.1",
    "tailwind-merge": "^1.12.0",
    "vite-tsconfig-paths": "^4.2.0"
  },
  "devDependencies": {
    "@storybook/addon-a11y": "^7.0.10",
    "@storybook/addon-essentials": "^7.0.10",
    "@storybook/addon-interactions": "^7.0.10",
    "@storybook/addon-links": "^7.0.10",
    "@storybook/blocks": "^7.0.10",
    "@storybook/react": "^7.0.10",
    "@storybook/react-vite": "^7.0.10",
    "@storybook/testing-library": "^0.1.0",
    "@svgr/cli": "^8.0.1",
    "@types/jest": "^29.5.1",
    "@types/react": "^18.2.6",
    "@types/react-dom": "^18.2.4",
    "@types/react-redux": "^7.1.25",
    "@typescript-eslint/eslint-plugin": "^5.59.5",
    "@typescript-eslint/parser": "^5.59.5",
    "@vitejs/plugin-react-swc": "^3.3.1",
    "autoprefixer": "^10.4.14",
    "eslint": "^8.40.0",
    "eslint-config-prettier": "^8.8.0",
    "eslint-plugin-import": "^2.27.5",
    "eslint-plugin-jsx-a11y": "^6.7.1",
    "eslint-plugin-react": "^7.32.2",
    "eslint-plugin-react-hooks": "^4.6.0",
    "eslint-plugin-simple-import-sort": "^10.0.0",
    "eslint-plugin-unused-imports": "^2.0.0",
    "husky": "^8.0.3",
    "jest": "^29.5.0",
    "lint-staged": "^13.2.2",
    "postcss": "^8.4.23",
    "prettier": "^2.8.8",
    "prettier-plugin-tailwindcss": "^0.2.8",
    "prop-types": "^15.8.1",
    "storybook": "^7.0.10",
    "tailwindcss": "^3.3.2",
    "ts-jest": "^29.1.0",
    "ts-node": "^10.9.1",
    "typescript": "^5.0.4",
    "vite": "^4.3.5"
  }
}
